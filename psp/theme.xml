<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (psp)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>PlayStation Portable [a]（ PSP ）是由 Sony Computer Entertainment 开发的手持游戏机， 与 Nintendo DS 竞争， 后者是第七代视频游戏机的一部分。 手持式控制台的开发在2003年 E3期间宣布， 并于2004年5月11日在下一个 E3之前的索尼新闻发布会上发布。 该系统于2004年12月12日在日本发布。 2005年3月24日在北美上市； 并于2005年9月1日在 PAL 地区发布。 </text>
			</text>

			<text name="release_date" extra="true">
				<text>发布日期: December 12, 2004</text>
			</text>

			<text name="developer" extra="true">
				<text>厂商: Sony Computer Entertainment</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: 20-333 MHz MIPS R4000</text>
			</text>

			<text name="memory" extra="true">
				<text>内存: 32 MB; 64 MB</text>
			</text>

			<text name="graphics" extra="true">
				<text>显卡: 480 × 272 pixels</text>
			</text>

			<text name="sound" extra="true">
				<text>声卡: Stereo speakers, mono speaker</text>
			</text>

			<text name="media" extra="true">
				<text>存储介质: UMD, digital distribution</text>
			</text>
		</view>
	</feature>

</theme>
