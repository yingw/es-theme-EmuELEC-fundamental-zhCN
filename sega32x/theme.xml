<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (sega32x)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>32X 是 Sega Mega Drive / Genesis 视频游戏机的附加组件。 代号为“火星计划”的32X 旨在扩大 Genesis 的功能， 并充当过渡到32位时代的控制台， 直到世嘉土星发布。 独立于 Genesis 的32X 使用其自己的 ROM 盒带并拥有自己的游戏库。 该附加组件在日本以 Super 32X ， 在北美的 Genesis 32X ， 在 PAL 地区的 Mega Drive 32X 和在巴西的 Mega 32X 的名称发行。 </text>
			</text>
		
			<text name="release_date" extra="true">
				<text>发布日期: June 1, 1994</text>
			</text>
			
			<text name="developer" extra="true">
				<text>厂商: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Two Hitachi SH2 32-bit RISC</text>
			</text>
			
			<text name="memory" extra="true">
				<text>内存: 256 KB RAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>显卡: Sega 32X VDP</text>
			</text>
			
			<text name="sound" extra="true">
				<text>声卡: QSound PWM</text>
			</text>
			
			<text name="media" extra="true">
				<text>存储介质: Cartridge</text>
			</text>
		</view>
	</feature>
	
</theme>