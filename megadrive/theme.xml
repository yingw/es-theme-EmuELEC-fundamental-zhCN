<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (megadrive)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Sega Mega Drive 是由 Sega 于1988年开发的基于盒式视频游戏机， 在北美称为 Sega Genesis ， 在南韩称为 Super Gam * Boy （后称 Super Aladdin Boy ）。 MegaDrive 是 Sega 的第三款家用游戏机， 遵循 SG-1000（包括 SG-1000 II ）和 Sega 主系统（ Mark III ）。 它在开发过程中的代号为 Sega Mark V ， 是现在称为第四代视频游戏机的一部分。 Mega Drive 是世嘉最成功的视频游戏机， 全球销量超过4000万台。 </text>
			</text>
		
			<text name="release_date" extra="true">
				<text>发布日期: August 14, 1989</text>
			</text>
			
			<text name="developer" extra="true">
				<text>厂商: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Motorola 68000, Zilog Z80 co-processor</text>
			</text>
			
			<text name="memory" extra="true">
				<text>内存: 64 KB main RAM and 64 KB video RAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>显卡: Yahama YM7101 VDP</text>
			</text>
			
			<text name="sound" extra="true">
				<text>声卡: Yamaha YM2612, Texas Instruments SN76489A</text>
			</text>
			
			<text name="media" extra="true">
				<text>存储介质: Cartridge</text>
			</text>
		</view>
	</feature>
	
</theme>