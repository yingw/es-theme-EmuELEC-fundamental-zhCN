<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (pcfx)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>PC-FX 是 NEC Home Electronics 生产的32位家用视频游戏机。 它于1994年12月23日在日本发行， 距索尼的 PlayStation 发布仅几周， 而世嘉土星发布仅一个月。 它是 PC 引擎（在北美称为 TurboGrafx-16）的后继产品。 </text>
			</text>

			<text name="release_date" extra="true">
				<text>发布日期: December 23, 1994</text>
			</text>

			<text name="developer" extra="true">
				<text>厂商: NEC Home Electronics</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: NEC V810</text>
			</text>

			<text name="memory" extra="true">
				<text>内存: 2 MB</text>
			</text>

			<text name="graphics" extra="true">
				<text>显卡: 341x480i</text>
			</text>

			<text name="sound" extra="true">
				<text>声卡: 16-Bit Stereo CD-DA</text>
			</text>

			<text name="media" extra="true">
				<text>存储介质: CD-ROM</text>
			</text>
		</view>
	</feature>

</theme>
