<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (naomi)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>NAOMI （新街机操作机器概念）是 Sega Model 3的继承者。 Sega 首次在1998年 Amusement Machine Show （由日本 Amusement Machinery Manufacturers Association 在日本举办的年度贸易展览会）上公开展示了 NAOMI 。 演出结束后， 世嘉向日本市场发布了首个 NAOMI 头衔：《亡者之屋2》。 </text>
			</text>
		
			<text name="release_date" extra="true">
				<text>发布日期: Varies</text>
			</text>
			
			<text name="developer" extra="true">
				<text>厂商: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Hitachi SH-4 @ 200 MHz</text>
			</text>
			
			<text name="memory" extra="true">
				<text>内存: 32 MB</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>显卡: NEC-VideoLogic PowerVR 2</text>
			</text>
			
			<text name="sound" extra="true">
				<text>声卡: Yamaha AICA</text>
			</text>
			
			<text name="media" extra="true">
				<text>存储介质: ROM board</text>
			</text>
		</view>
	</feature>
	
</theme>