<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (gw)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>Game & Watch （日语：ゲーム＆ウオッチ G ē mu ＆ Uotchi ；在西德和奥地利称为 Tricotronic ）是任天堂于1980年至1991年生产的一系列手持式电子游戏。 游戏设计师 Gunpei Yokoi 创立， 每款游戏和手表均具有一个除时钟和/或闹钟外， 还可以在 LCD 屏幕上玩的游戏。 它是任天堂最早获得重大成功的产品。 </text>
			</text>

			<text name="release_date" extra="true">
				<text>发布日期: April 28, 1980</text>
			</text>

			<text name="developer" extra="true">
				<text>厂商: Nintendo R&D1</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Sharp SM5xx family</text>
			</text>

			<text name="memory" extra="true">
				<text>显卡: Liquid-crystal display</text>
			</text>
		</view>
	</feature>

</theme>
